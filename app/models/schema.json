{
  "__AUTH__": "Artist",
  "Artist": {
    "first_name": ["String", { "nullable": false }],
    "last_name": ["String", { "nullable": false }],
    "bio": ["String", { "nullable": false }],
    "relationships": {
      "liked_songs": ["Song", "artists_that_like", "likes"]
    }
  },
  "Playlist": {
    "name": ["String", { "nullable": false }],
    "description": "Text",
    "isPublic": "Boolean",
    "owner_id": "Artist",
    "relationships": {
      "owner": ["Artist", "playlists"],
      "songs": ["Song", "playlists_added_to", "playlist_songs"]
    },
    "idx": ["idx_public_name", "name", "isPublic", { "unique": true }]
  },
  "Album": {
    "name": "String",
    "release_date": "Date",
    "description": "Text",
    "artist_id": "Artist",
    "relationships": { "artist": ["Artist", "albums"] }
  },
  "Song": {
    "name": "String",
    "url": "String",
    "album_id": "Album",
    "artist_id": "Artist",
    "relationships": { "album": ["Album", "songs"], "likes": ["Like", "song"] }
  },

  "Like": {
    "user_id": "Artist",
    "song_id": "Song"
  },

  "PlaylistSong": {
    "song_index": "Integer",
    "playlist_id": "Playlist",
    "song_id": "Song"
  }
}
